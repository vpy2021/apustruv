<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bodycolor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/statusImageHome"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/menlogo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/menlog"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profilenamemen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Serndipity in love"
                android:textColor="#000000"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/profileNamedotID"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/dotinhomelogo"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/followID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Follow"
                android:textColor="#000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/threedot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_40sdp"
                android:text="..."
                android:textColor="#000000"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/bodycolor"
                android:background="@color/bodycolor"
                android:layout_marginTop="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/maindraftlogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/maindraftlogo"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/likeincreament"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="1,026"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="notes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />


                <ImageView
                    android:id="@+id/share"
                    tools:ignore="ImageContrastCheck"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:src="@drawable/ic_shareupdatedlogo" />

                <ImageView
                    android:id="@+id/refresh"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_pathreferseogo" />

                <ImageView
                    android:id="@+id/clickLike"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_heartlogo" />


            </LinearLayout>


        </LinearLayout>




        </LinearLayout>


