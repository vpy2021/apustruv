<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeTimeLineID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2EB"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">

    <include
        layout="@layout/custom_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45sdp"
        android:background="#F5F2EB"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/shadowView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2FFFFFF"
        android:visibility="gone" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:id="@+id/floatingLayout">

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menuFAMID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        app:fab_addButtonColorNormal="@color/white"
        app:fab_addButtonPlusIconColor="#2F4F4E"
        android:layout_alignParentBottom="true"
        tools:ignore="SpeakableTextPresentCheck">



        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/candleID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text"
            app:fab_addButtonColorNormal="@color/white"
            app:fab_addButtonPlusIconColor="#FFFFFF"
            app:fab_size="mini" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/moviesFABID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music"
            app:fab_addButtonColorNormal="@color/white"
            app:fab_addButtonPlusIconColor="#F85B7D"
            app:fab_size="mini" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/cameraFABID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cam"
            app:fab_addButtonColorNormal="@color/white"
            app:fab_addButtonPlusIconColor="#0148A4"
            app:fab_size="mini" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/videoFABID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mov"
            app:fab_addButtonColorNormal="@color/white"
            app:fab_addButtonPlusIconColor="#F8971C"
            app:fab_size="mini" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/locatioFABID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loc"
            app:fab_addButtonColorNormal="@color/white"
            app:fab_addButtonPlusIconColor="#3F3B3A"
            app:fab_size="mini" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/musicFABID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookupdated"
            app:fab_addButtonColorNormal="@color/white"
            app:fab_addButtonPlusIconColor="#5EB435"
            app:fab_size="mini"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/textFABID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/syrinj"
            app:fab_addButtonColorNormal="@color/white"
            app:fab_addButtonPlusIconColor="#FFFFFF"
            app:fab_size="mini" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</LinearLayout>

</RelativeLayout>