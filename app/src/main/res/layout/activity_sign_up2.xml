<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2EB"
    android:orientation="vertical"
    tools:context=".Activity.SignUp2Activity">


<include layout="@layout/custom_actionbar_signup2"/>

    <TextView
        android:id="@+id/letGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:text="LET'S GET STARTED!"
        android:textAlignment="center"
        android:textColor="#2F4F4E"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        android:layout_height="wrap_content"
        android:text="Create  an account  to Apustrov "
        android:textColor="#2F4F4E"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_height="wrap_content"
        android:text="to get all features "
        android:textColor="#2F4F4E"
        android:gravity="center_horizontal" />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImageView"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/profileup"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        tools:ignore="MissingClass" />


    <EditText
        android:id="@+id/nickNameID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@layout/custom_input_design"
        android:drawableStart="@drawable/profile"
        android:ems="10"
        android:hint="Nick Name"
        android:inputType="textPersonName"
        android:textColorHint="#8E8E8E"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountID"
        android:drawableLeft="@drawable/profile" />

    <EditText
        android:id="@+id/ageID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_11sdp"
        android:drawablePadding="10dp"
        android:background="@layout/custom_input_design"
        android:drawableStart="@drawable/ic_upadatedcakelogo"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:textColorHint="#8E8E8E"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:drawableLeft="@drawable/birthday"/>

    <EditText
        android:id="@+id/aboutID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@layout/custom_input_design"
        android:drawable= "@drawable/profile"
        android:ems="6"
        android:hint="About"
        app:layout_constraintTop_toBottomOf="@+id/createAccountID"
        android:drawableLeft="@drawable/profile"
        android:inputType="textPersonName"
        android:textColorHint="#8E8E8E"

        android:layout_marginHorizontal="@dimen/_30sdp"
         />

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="37dp"
        android:textAllCaps="false"
        android:background="@drawable/round_button"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal" />


</LinearLayout>