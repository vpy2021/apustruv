<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HelpCenterActivity"
    android:background="#F5F1EB">

    <include layout="@layout/custom_actionbar_signup" />

    <TextView
        android:id="@+id/helpCenterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Help Center"
        android:textColor="#2F4F4E"
        android:textSize="30dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/howCanHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="hi, how can we help you ?"
        android:textColor="#2F4F4E"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/helpCenterInputText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        android:background="@layout/custom_input_design"
        android:lines="8"
        android:maxLines="10"
        android:minLines="1"
        android:gravity="top|left"
        android:scrollbars="vertical"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_margin="30dp"
        android:background="@drawable/round_button"
        android:textAllCaps="false"
        android:text="Submit"
        android:textColor="@color/white"
        android:backgroundTint="#707070"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>