<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2EB"
    android:orientation="vertical"
    tools:context=".Activity.AccountSettingActivity">

    <include layout="@layout/custom_actionbar_signup"/>

    <TextView
        android:id="@+id/letGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="40dp"
        android:text="Account Setting"
        android:textColor="#2F4F4E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editProfileID"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="70dp"
        android:background="#F5F2EB"
        android:drawableStart="@drawable/pv"
        android:drawableLeft="@drawable/pv"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:text="Edit Profiile"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="80dp"
        android:background="#707070" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/privateID"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#F5F2EB"
            android:drawableStart="@drawable/pn"
            android:drawableLeft="@drawable/pn"
            android:ems="10"
            android:textSize="20dp"
            android:drawablePadding="10dp"
            android:enabled="false"
            android:text="Private Account"
            android:layout_marginHorizontal="30dp"
            android:textColor="#000000"
            android:inputType="textPersonName"
            android:gravity="center_vertical"
            android:visibility="visible" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:minHeight="48dp"
            android:textOff="off"
            android:textOn="on"
            android:textColor="#000000"
            app:track="@drawable/track"
            app:showText="true"
            android:thumb="@drawable/circular_thumb" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="80dp"
        android:background="#707070" />


    <TextView
        android:id="@+id/changeID"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="#F5F2EB"
        android:drawableStart="@drawable/pv"
        android:drawableLeft="@drawable/pv"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:text="Change Password"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="80dp"
        android:background="#707070" />

</LinearLayout>