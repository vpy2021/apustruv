<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F5F2EB"
    android:layout_gravity="center"
    tools:context=".Activity.LikeActivity"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <include layout="@layout/custom_layout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15sp"
        android:fontFamily="sans-serif"
        android:layout_marginHorizontal="10sp"
        android:paddingLeft="10sp"
        android:text="What do you like?"
        android:textColor="#2F4F4E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="10sp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:paddingLeft="10sp"
        android:paddingRight="20sp"
        android:text="Whatever you're into, you'll find it here. Follow some of the tags below to start filling your dashboard with the things you love."
        android:textColor="#000000" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20sp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#8DBB8D"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/tick1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Trending"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#D7C0D4"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/tick2"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/textart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="ART"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#7D8C9F"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/tick3"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textwriting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Writing"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10sp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:backgroundTint="#2F4F4E"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/tick4"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"></ImageView>
            <TextView
                android:id="@+id/textViewtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Television"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#FFF9F9"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/tick5"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"></ImageView>
            <TextView
                android:id="@+id/textViewaes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Aesthetic"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#D3D3D3"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/tick6"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"></ImageView>
            <TextView
                android:id="@+id/textViewpositive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Positivity"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#B2C3DF"
            app:cardCornerRadius="10dp"


            >
            <ImageView
                android:id="@+id/tick7"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"></ImageView>
            <TextView
                android:id="@+id/textViewmovies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Movies"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#8DBB8D"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/tick8"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"></ImageView>
            <TextView
                android:id="@+id/textViewgame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Gaming"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#7D8C9F"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/tick9"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/roundtick"
                android:layout_marginLeft="75dp"
                android:visibility="gone"></ImageView>
            <TextView
                android:id="@+id/textViewfunny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10sp"
                android:text="Funny"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>




    <Button
        android:id="@+id/nextslide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/round_button"
        android:textAllCaps="false"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />






</LinearLayout>